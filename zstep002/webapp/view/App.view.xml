<mvc:View
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  controllerName="zstep002.controller.App"
  displayBlock="true">

    <Shell>
      <App class="myAppDemoWT">
        <pages>
          <Page title="{i18n>homePageTitle}">
            <headerContent>
              <Button
                icon="sap-icon://hello-world"
                press=".onOpenDialog"/>
            </headerContent>
            <content>
              <mvc:XMLView viewName="zstep002.view.HelloPanel"/>
              <mvc:XMLView viewName="zstep002.view.InvoiceList"/>
            </content>
          </Page>
        </pages>
      </App>
    </Shell>
</mvc:View>
